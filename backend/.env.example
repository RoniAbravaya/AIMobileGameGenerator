# GameFactory Backend Environment Variables

# Application
APP_NAME=GameFactory
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# Database
DATABASE_URL=postgresql+asyncpg://gamefactory:gamefactory@localhost:5432/gamefactory

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=gamefactory-games
GITHUB_TEMPLATE_REPO=flame-game-template

# AI Services - Claude AI is PRIMARY
# Claude (Anthropic) - Required for AI generation
ANTHROPIC_API_KEY=your_anthropic_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI - Optional fallback provider
OPENAI_API_KEY=your_openai_key_here
AI_MODEL=gpt-4-turbo-preview

# AI Generation Settings
# AI_GENERATION_REQUIRED: If true (default), fail if no AI provider configured
AI_GENERATION_REQUIRED=true
# AI_GENERATION_RETRIES: Number of retries for transient AI API failures
AI_GENERATION_RETRIES=3
# AI_ALLOW_TEMPLATE_FALLBACK: If true, use template-based GDD when AI fails (dev/testing ONLY)
AI_ALLOW_TEMPLATE_FALLBACK=false

# Firebase
FIREBASE_PROJECT_ID=your_firebase_project
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Asset Storage
ASSET_STORAGE_PATH=./storage/assets
ASSET_CDN_URL=

# Workflow
MAX_STEP_RETRIES=3
STEP_TIMEOUT_SECONDS=600
BATCH_DEFAULT_SIZE=10

# Security
SECRET_KEY=change-me-in-production-use-secrets-generator
API_KEY_HEADER=X-API-Key
